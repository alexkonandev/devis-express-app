{
  "compilerOptions": {
    "target": "ESNext", // Optimisé pour Next.js 16 et les environnements modernes
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // Discipline totale pour éviter les bugs en prod
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Crucial pour la résolution des packages modernes via pnpm
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Définit l'utilisation du runtime React moderne
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Ajout pour forcer la reconnaissance des types React 19
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
