

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum PlanStatus {
  FREE
  PRO
  ENTERPRISE
}

enum QuoteStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  PAID
}

enum Profession {
  TECH
  CREATIVE
  MARKETING
  CONTENT
  CONSULTING
}

enum BusinessModel {
  PROJECT
  TIME
  RECURRING
  UNIT
}

model User {
  id              String    @id 
  email           String    @unique
  plan            PlanStatus @default(FREE)
  profession      Profession?
  businessModel   BusinessModel?
  isOnboarded     Boolean   @default(false)
  companyName     String?
  companyEmail    String?
  companyPhone    String?
  companyAddress  String?
  companySiret    String?
  companyWebsite  String?
  quotePrefix     String    @default("INV-")
  nextQuoteNumber Int       @default(1)
  currency        String    @default("EUR")
  defaultVatRate  Float     @default(20.0)
  defaultTerms    String?
  clients         Client[]
  quotes          Quote[]
  userServices    UserService[]
  catalogOffers   CatalogOffer[] 
  subscription    Subscription?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  @@map("users")
}
model UserApiLimit {
  id        String   @id @default(cuid())
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String    @unique
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  variantId        String?   
  customerId       String?   @unique
  subscriptionId   String?   @unique
  endsAt           DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model CatalogOffer {
  id              String    @id @default(cuid())
  category        String    
  title           String    
  subtitle        String    @default("")
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  unitPriceEuros  Float
  isPremium       Boolean   @default(false)
  createdAt       DateTime  @default(now())

  @@index([category])
}

model UserService {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  subtitle        String    @default("")
  unitPriceEuros  Float
  createdAt       DateTime  @default(now())
  @@unique([userId, title])
}


model Client {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  email           String?
  address         String?
  siret           String?
  quotes          Quote[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([userId, name])
}

model Quote {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id])
  clientId        String
  client          Client    @relation(fields: [clientId], references: [id])
  number          String    @unique
  status          QuoteStatus @default(DRAFT)
  issueDate       DateTime  @default(now())
  vatRatePercent  Float     @default(20)
  discountEuros   Float     @default(0)
  lines           QuoteLine[]
  terms           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("quotes")
}

model QuoteLine {
  id              String    @id @default(cuid())
  quoteId         String
  quote           Quote     @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  title           String
  subtitle        String    @default("")
  quantity        Float     @default(1)
  unitPriceEuros  Float
  @@map("quote_lines")
}
model Theme {
  id          String   @id @default(cuid())
  name        String   
  description String?  
  color       String   
  baseLayout  String   
  config      Json   
  isSystem    Boolean  @default(false)
  isPremium   Boolean  @default(true) 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([isSystem])
}