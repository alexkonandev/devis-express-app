generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
// Schéma pour la bibliothèque de modèles (Ontologie)
model ServiceTemplate {
  id          String   @id @default(cuid())
  category    String   // Tech, Design, Marketing, etc.
  subcategory String   // DevOps, SEO, Branding...
  title       String   // Titre interne
  
  // Données riches stockées en JSON structuré
  // Contient: headline, description, key_benefits
  salesCopy      Json   
  
  // Contient: included[], excluded[]
  technicalScope Json   
  
  // Contient: suggested_model, tiers { junior, senior, expert }
  pricing        Json   
  
  // Contient: trend, insight
  marketContext  Json   

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([subcategory])
}

// SERVICE ITEM (Catalogue des Prestations)

// SERVICE ITEM (Catalogue des Prestations)
model ServiceItem {
  id              String    @id @default(cuid())
  userId          String    
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // INFOS DE BASE
  title           String    
  description     String?   
  category        String?   
  
  // PRICING SIMPLE (Pour affichage liste rapide)
  unitPriceEuros  Float     
  defaultQuantity Float     @default(1) 
  isTaxable       Boolean   @default(true) 

  // --- HARMONISATION AVEC SERVICE TEMPLATE ---
  // C'est ici qu'on stocke la richesse de l'offre
  
  // Structure: { headline, description, key_benefits[] }
  salesCopy       Json?     
  
  // Structure: { included[], excluded[] }
  technicalScope  Json?     
  
  // Structure: { tiers: { junior, senior, expert }, suggested_model }
  pricing         Json?     
  
  // Structure: { trend, insight } (Optionnel mais bon pour le futur)
  marketContext   Json?     

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId])
  @@unique([userId, title]) 
  @@map("service_items")
}

model User {
  id        String    @id @default(cuid()) 
  email     String    @unique 
  
  // Identité Entreprise
  companyName    String?
  companyEmail   String?
  companyPhone   String?
  companyAddress String?
  companySiret   String?   // NOUVEAU
  companyWebsite String?   // NOUVEAU (Pour remplir l'espace)

  // Paramètres de Facturation (Automatisation)
  quotePrefix    String    @default("DEV-")
  nextQuoteNumber Int      @default(1)
  defaultVatRate Float     @default(20.0)
  defaultTerms   String?   // Mentions légales par défaut

  Clients   Client[]
  Devis     Devis[]
 ServiceItems ServiceItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

// 2. CLIENT (Destinataire réutilisable)
model Client {
  id        String    @id @default(cuid())
  userId    String    
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade) 
  // Note: onDelete: Cascade permet de supprimer les clients si l'user supprime son compte

  name      String
  email     String?
  phone     String?   // NOUVEAU : Indispensable pour le CRM
  address   String?
  siret     String?   // NOUVEAU : Critique pour la conformité B2B (TVA Intra, etc.)
  notes     String?   // NOUVEAU : Pour noter des infos (ex: "Contact: Mme Durand")

  Devis     Devis[]   

  createdAt DateTime  @default(now()) // NOUVEAU : Pour le tri
  updatedAt DateTime  @updatedAt      // NOUVEAU : Pour le tri
  
  // Cette contrainte est très bien pour éviter les doublons stricts
  @@unique([userId, name]) 
  @@map("clients")
}

// 3. DEVIS (Document Principal et Transaction)
model Devis {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  
  clientId    String    
  client      Client    @relation(fields: [clientId], references: [id])
  
  // Champs critiques
  number      String    @unique
  issueDate   DateTime  
  
  // NOUVEAU : Gestion complète du cycle de vie
  // Valeurs possibles : 'draft', 'sent', 'accepted', 'rejected', 'archived'
  status      String    @default("draft") 
  
  // NOUVEAU : Date d'échéance (pour les alertes KPI)
  validityDate DateTime?

  totalTTC    Float     

  // Champs Financiers
  vatRatePercent      Float @default(20) 
  discountAmountEuros Float @default(0)  

  // Contenu
  itemsData   Json      
  terms       String?   
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("devis")
}